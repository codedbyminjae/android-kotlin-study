<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- ConstraintLayout 전체를 ScorllView로 감싸서 화면이 작을 경우에도 스크롤 가능하게 제작 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- 타이틀 텍스트 부분 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_day_how"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 서브 타이틀 텍스트 부분-->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_pick_stamp"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/emotionDefault"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 1. 행복, 아이콘 + 텍스트를 한세트로 하나의 ConstraintLayout으로 구성 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemHappy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 이미지 -->
            <ImageView
                android:id="@+id/ivHappy"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/cd_happy"
                app:srcCompat="@drawable/ic_happy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 이미지 아래 텍스트 부분 -->
            <TextView
                android:id="@+id/tvHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/toast_happy"
                android:textColor="@color/emotionDefault"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/ivHappy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2. 들뜸 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemExcited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemHappy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivExcited"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/cd_excited"
                app:srcCompat="@drawable/ic_smile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvExcited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/toast_excited"
                android:textColor="@color/emotionDefault"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/ivExcited"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 3. 보통 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemExcited"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivNormal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/cd_normal"
                app:srcCompat="@drawable/ic_neutral"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/toast_normal"
                android:textColor="@color/emotionDefault"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/ivNormal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 4. 불안 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemAnxious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemNormal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivAnxious"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/cd_anxious"
                app:srcCompat="@drawable/ic_angry"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAnxious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/toast_anxious"
                android:textColor="@color/emotionDefault"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/ivAnxious"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 5. 속상 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemSad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemAnxious"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivSad"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/cd_sad"
                app:srcCompat="@drawable/ic_sad"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/toast_sad"
                android:textColor="@color/emotionDefault"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/ivSad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
