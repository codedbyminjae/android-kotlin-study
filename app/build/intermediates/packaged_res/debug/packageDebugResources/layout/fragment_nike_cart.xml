<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- 장바구니 아이콘 -->
    <ImageView
        android:id="@+id/img_cart_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nike_cart_empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_cart_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- 텍스트 1: 장바구니가 비어 있습니다. -->
    <TextView
        android:id="@+id/txt_cart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니가 비어 있습니다."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/img_cart_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 텍스트 2: 제품을 추가하면 여기에 표시됩니다. -->
    <TextView
        android:id="@+id/txt_cart_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품을 추가하면 여기에 표시됩니다."
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/txt_cart_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 주문하기 버튼 -->
    <Button
        android:id="@+id/btn_order"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="주문하기"
        android:textColor="@android:color/white"
        android:backgroundTint="#000000"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
